<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yidoutangdemo.ui.ShaiJiaActivity">
    <RelativeLayout
        android:id="@+id/activity_shaijia_rlativelayoutId"
        android:layout_width="match_parent"
        android:background="#FDB934"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/activity_shaijia_back"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="晒家"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/activity_shaijia_back"/>
        <ImageView
            android:id="@+id/activity_shaijia_shaixuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_menu_filter"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
<com.chanven.lib.cptr.PtrFrameLayout
    android:id="@+id/activity_shaijia_ptrFrameLayout"
    android:layout_gravity="center"
    app:ptr_resistance="1.7"
    app:ptr_ratio_of_header_height_to_refresh="1.2"
    app:ptr_duration_to_close="200"
    app:ptr_duration_to_close_header="300"
    app:ptr_keep_header_when_refresh="true"
    app:ptr_pull_to_fresh="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_shaijia_recyclerviewId"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
</com.chanven.lib.cptr.PtrFrameLayout>


</LinearLayout>
