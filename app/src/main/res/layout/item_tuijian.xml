<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp">
    <ImageView
        android:id="@+id/item_tuijian_mainImg"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_load"
        />
    <TextView
        android:id="@+id/item_tuijian_mainTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/item_tuijian_mainImg"/>
    <ImageView
        android:id="@+id/item_tuijian_userpic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/default_load"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/item_tuijian_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_tuijian_userpic"
        android:layout_toRightOf="@id/item_tuijian_userpic"
        android:textColor="#ffffff"
        android:text="你好！"
        />
    <ImageView
        android:id="@+id/iv1"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_view_case_item"
        android:layout_alignBottom="@id/item_tuijian_userpic"
        android:layout_marginLeft="230dp"
        />
    <TextView
        android:id="@+id/item_tuijian_sharingnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_tuijian_userpic"
        android:textColor="#ffffff"
        android:text="2949"
        android:layout_toRightOf="@id/iv1"
        />
    <ImageView
        android:id="@+id/iv2"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/item_tuijian_userpic"
        android:src="@drawable/ic_sharing_num"
        android:layout_marginLeft="300dp"

        />
    <TextView
        android:id="@+id/item_tuijian_clicknum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2949"
        android:textColor="#ffffff"
        android:layout_alignBottom="@id/item_tuijian_userpic"
        android:layout_toRightOf="@id/iv2"
        />



</RelativeLayout>