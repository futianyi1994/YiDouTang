<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.example.yidoutangdemo.ui.ShowDetailActivity">
    <RelativeLayout
        android:id="@+id/activity_showdetail_RelativeLayoutId"
        android:layout_width="match_parent"
        android:background="#000"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/activity_showdetail_backImageViewId"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/ic_photo_back"/>
        <LinearLayout
            android:id="@+id/activity_showdetail_LinearLayoutId"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/activity_showdetail_favtId"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/ic_photo_fav"/>
            <ImageView
                android:id="@+id/activity_showdetail_commenttId"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/ic_photo_comment"/>
            <ImageView
                android:id="@+id/activity_showdetail_shareId"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/ic_photo_share"/>
        </LinearLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/activity_showdetail_ButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="#00000000"
        android:textColor="#fff"
        android:text="查看原帖"/>

    <android.support.v4.view.ViewPager
        android:layout_below="@id/activity_showdetail_RelativeLayoutId"
        android:layout_above="@id/activity_showdetail_ButtonId"
        android:id="@+id/activity_showdetail_viewPagerId"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>



</RelativeLayout>
